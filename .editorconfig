# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{css,less,scss}]
indent_size = 2

[*.{jsx,js,json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[.eslintrc]
indent_size = 2
